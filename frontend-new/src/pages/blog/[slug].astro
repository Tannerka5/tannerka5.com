---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { blogPosts } from '../../../data/blog-posts';

export function getStaticPaths() {
  return blogPosts
    .filter(post => post.published)
    .map((post) => ({
      params: { slug: post.slug },
      props: { post },
    }));
}

const { post } = Astro.props;

const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<BaseLayout 
  title={`${post.title} | Blog`} 
  description={post.excerpt}
  ogType="article"
  ogImage={post.coverImage}
  article={{
    publishedTime: post.date,
    author: post.author || "Tanner Atkinson",
    tags: post.tags
  }}
>
  <article class="bg-cream dark:bg-gray-900 min-h-screen py-20 px-4 transition-colors duration-300">
    <div class="max-w-4xl mx-auto">
      {/* Header */}
      <header class="mb-12">
        <div class="flex flex-wrap gap-2 mb-4">
          {post.tags.map((tag: string) => (
            <span class="text-xs px-3 py-1 bg-sage/10 dark:bg-sage/20 text-sage-dark dark:text-sage-light rounded-full">
              {tag}
            </span>
          ))}
        </div>
        
        <h1 class="text-4xl md:text-5xl font-display font-bold text-earth dark:text-gray-100 mb-6">
          {post.title}
        </h1>
        
        <div class="flex items-center gap-4 text-earth/70 dark:text-gray-300 text-sm">
          <time datetime={post.date}>{formatDate(post.date)}</time>
          <span>‚Ä¢</span>
          <span>{post.readTime}</span>
          {post.author && (
            <>
              <span>‚Ä¢</span>
              <span>By {post.author}</span>
            </>
          )}
        </div>
      </header>

      {/* Cover Image */}
      {post.coverImage && (
        <img
          src={post.coverImage}
          alt={post.title}
          class="w-full rounded-xl shadow-lg mb-12"
          loading="lazy"
          width="800"
          height="450"
        />
      )}

      {/* Content Placeholder */}
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <div class="bg-white dark:bg-gray-800 p-8 rounded-xl border border-sage/10 dark:border-gray-700 mb-8">
          <p class="text-lg text-earth/80 dark:text-gray-300 leading-relaxed mb-6">
            {post.excerpt}
          </p>
          
          <div class="space-y-4 text-earth/70 dark:text-gray-400">
            <p class="text-center italic">
              üìù Full article content coming soon...
            </p>
            <p class="text-sm">
              This blog post will include detailed technical writeups, code examples, 
              architecture diagrams, and lessons learned from building real-world projects.
            </p>
          </div>
        </div>

        {/* Related Posts Section */}
        <div class="mt-12 p-6 bg-cream dark:bg-gray-900 rounded-xl">
          <h2 class="text-2xl font-bold text-earth dark:text-gray-100 mb-4">Want to Learn More?</h2>
          <p class="text-earth/70 dark:text-gray-300 mb-4">
            Check out my projects to see these concepts in action, or get in touch to discuss web development, 
            cloud architecture, or database design.
          </p>
          <div class="flex flex-wrap gap-4">
            <a 
              href="/projects" 
              class="px-6 py-3 bg-accent text-white rounded-lg font-semibold hover:bg-accent-dark transition-colors"
            >
              View Projects
            </a>
            <a 
              href="/contact" 
              class="px-6 py-3 bg-white dark:bg-gray-800 text-earth dark:text-gray-100 border-2 border-sage dark:border-gray-600 rounded-lg font-semibold hover:bg-sage hover:text-white dark:hover:bg-gray-700 transition-colors"
            >
              Get In Touch
            </a>
          </div>
        </div>
      </div>

      {/* Back to Blog */}
      <div class="mt-12 pt-8 border-t border-sage/20 dark:border-gray-700">
        <a 
          href="/blog" 
          class="inline-flex items-center gap-2 text-accent hover:text-accent-dark transition-colors font-semibold"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Blog
        </a>
      </div>
    </div>
  </article>
</BaseLayout>
