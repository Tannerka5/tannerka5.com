---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { blogPosts } from '../../../data/blog-posts';

export function getStaticPaths() {
  return blogPosts
    .filter(post => post.published)
    .map((post) => ({
      params: { slug: post.slug },
      props: { post },
    }));
}

const { post } = Astro.props;

const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<BaseLayout title={`${post.title} | Blog`} description={post.excerpt}>
  <article class="bg-cream dark:bg-dark-bg min-h-screen py-20 px-4 transition-colors duration-300">
    <div class="max-w-4xl mx-auto">
      {/* Header */}
      <header class="mb-12">
        <div class="flex flex-wrap gap-2 mb-4">
          {post.tags.map((tag: string) => (
            <span class="text-xs px-3 py-1 bg-sage/10 dark:bg-sage/20 text-sage-dark dark:text-sage-light rounded-full">
              {tag}
            </span>
          ))}
        </div>
        
        <h1 class="text-4xl md:text-5xl font-display font-bold text-earth dark:text-dark-text mb-6">
          {post.title}
        </h1>
        
        <div class="flex items-center gap-4 text-earth/70 dark:text-dark-text-secondary">
          <time datetime={post.date}>{formatDate(post.date)}</time>
          <span>â€¢</span>
          <span>{post.readTime}</span>
        </div>
      </header>

      {/* Cover Image */}
      {post.coverImage && (
        <img
          src={post.coverImage}
          alt={post.title}
          class="w-full rounded-xl shadow-lg mb-12"
        />
      )}

      {/* Content Placeholder */}
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <p class="text-xl text-earth/80 dark:text-dark-text-secondary leading-relaxed mb-8">
          {post.excerpt}
        </p>
        
        <div class="bg-white dark:bg-dark-card p-8 rounded-xl border border-sage/10 dark:border-dark-border">
          <p class="text-earth/70 dark:text-dark-text-secondary">
            Full blog post content coming soon. This will include detailed technical writeups,
            code examples, architecture diagrams, and lessons learned from building real-world projects.
          </p>
        </div>
      </div>

      {/* Back to Blog */}
      <div class="mt-12 pt-8 border-t border-sage/20 dark:border-dark-border">
        <a 
          href="/blog" 
          class="inline-flex items-center gap-2 text-accent hover:text-accent-dark transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Blog
        </a>
      </div>
    </div>
  </article>
</BaseLayout>
