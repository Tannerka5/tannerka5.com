---
import Navigation from '../components/Navigation';
import { ViewTransitions } from 'astro:transitions';
import BackToTop from '../components/BackToTop';
import SEO from '../components/SEO.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  ogType?: 'website' | 'article';
  article?: {
    publishedTime?: string;
    modifiedTime?: string;
    author?: string;
    tags?: string[];
  };
}

const { 
  title, 
  description = "Full-stack developer and Computer Science student specializing in cloud-based web applications.",
  ogImage,
  ogType = 'website',
  article
} = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO -->
    <SEO 
      title={title}
      description={description}
      ogImage={ogImage}
      ogType={ogType}
      article={article}
    />

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon/favicon-32x32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/images/favicon/apple-touch-icon.png" />

    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- DNS prefetch for external resources -->
    <link rel="dns-prefetch" href="https://github.com" />
    <link rel="dns-prefetch" href="https://linkedin.com" />
    
    <!-- Optimized font loading -->
    <link 
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@600;700;800&display=swap" 
      rel="stylesheet"
      media="print"
    />
    <script is:inline>
      (function() {
        const link = document.querySelector('link[href*="fonts.googleapis.com"]');
        if (link) {
          link.media = 'all';
        }
      })();
    </script>
    <noscript>
      <link 
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@600;700;800&display=swap" 
        rel="stylesheet"
      />
    </noscript>

    <!-- Theme Script (minified) -->
    <script is:inline>
      const t=localStorage.getItem('theme')||(window.matchMedia('(prefers-color-scheme: dark)').matches?'dark':'light');
      document.documentElement.classList.toggle('dark',t==='dark');
    </script>

    <!-- Performance hint styles -->
    <style is:inline>
      .will-change-transform {
        will-change: transform;
      }
    </style>

    {currentPath && !currentPath.startsWith('/admin') && <ViewTransitions />}
  </head>
  <body class="bg-cream dark:bg-gray-900 text-earth dark:text-gray-100 antialiased transition-colors duration-300">
    <Navigation client:idle currentPath={currentPath} />
    <main class="pt-20">
      <slot />
    </main>
    <footer class="bg-primary dark:bg-gray-950 text-white py-12 mt-20 transition-colors duration-300">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <p class="text-sm text-white/80">
            &copy; 2025 Tanner Atkinson. Built with Astro + React on AWS.
          </p>
          <div class="flex space-x-6 mt-4 md:mt-0">
            <a 
              href="https://github.com/tannerka5" 
              target="_blank" 
              rel="noopener noreferrer" 
              class="text-white/80 hover:text-accent transition-colors"
              aria-label="GitHub Profile"
            >
              <span class="sr-only">GitHub</span>
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
              </svg>
            </a>
            <a 
              href="https://linkedin.com/in/tanneratkinson" 
              target="_blank" 
              rel="noopener noreferrer" 
              class="text-white/80 hover:text-accent transition-colors"
              aria-label="LinkedIn Profile"
            >
              <span class="sr-only">LinkedIn</span>
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </footer>
    <BackToTop client:visible />
  </body>
</html>
