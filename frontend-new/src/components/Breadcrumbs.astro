---
interface BreadcrumbItem {
  name: string;
  path: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
const siteUrl = 'https://tannerka5.com';

// Always include home
const breadcrumbs = [
  { name: 'Home', path: '/' },
  ...items
];

// Structured data for breadcrumbs
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbs.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": `${siteUrl}${item.path}`
  }))
};
---

<nav aria-label="Breadcrumb" class="mb-8">
  <ol class="flex items-center gap-2 text-sm text-earth/70 dark:text-gray-400">
    {breadcrumbs.map((item, index) => (
      <li class="flex items-center gap-2">
        {index > 0 && (
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        )}
        {index === breadcrumbs.length - 1 ? (
          <span class="font-medium text-earth dark:text-gray-200">{item.name}</span>
        ) : (
          <a 
            href={item.path} 
            class="hover:text-accent transition-colors"
          >
            {item.name}
          </a>
        )}
      </li>
    ))}
  </ol>
</nav>

<!-- Structured Data -->
<script is:inline type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
