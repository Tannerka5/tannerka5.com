{
  "name": "backend",
  "version": "1.0.0",
  "description": "Serverless backend for portfolio website using TypeScript, Lambda, API Gateway, and DynamoDB",
  "main": "dist/handler.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist lambda.zip",
    "package": "npm run build && npm run zip",
    "zip": "powershell Compress-Archive -Path dist/*,node_modules -DestinationPath lambda.zip -Force",
    "deploy": "npm run clean && npm run package",
    "export": "node export-data.js",
    "export:projects": "node export-data.js --projects-only",
    "export:blog": "node export-data.js --blog-only"
  },
  "keywords": [
    "aws",
    "lambda",
    "typescript",
    "dynamodb",
    "api-gateway",
    "serverless"
  ],
  "author": "Tanner Atkinson",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.958.0",
    "@aws-sdk/client-s3": "^3.966.0",
    "@aws-sdk/lib-dynamodb": "^3.958.0",
    "@aws-sdk/s3-request-presigner": "^3.966.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.159",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^25.0.3",
    "@types/uuid": "^8.3.4",
    "typescript": "^5.9.3"
  }
}
