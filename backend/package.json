{
  "name": "backend",
  "version": "1.0.0",
  "description": "Serverless backend for portfolio website using TypeScript, Lambda, API Gateway, and DynamoDB",
  "main": "dist/handler.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist lambda.zip",
    "package": "npm run build && npm run zip",
    "zip": "powershell Compress-Archive -Path dist/*,node_modules -DestinationPath lambda.zip -Force",
    "deploy": "npm run clean && npm run package"
  },
  "keywords": [
    "aws",
    "lambda",
    "typescript",
    "dynamodb",
    "api-gateway",
    "serverless"
  ],
  "author": "Tanner Atkinson",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.958.0",
    "@aws-sdk/lib-dynamodb": "^3.958.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.159",
    "@types/node": "^25.0.3",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.9.3"
  }
}
